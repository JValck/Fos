@using Microsoft.AspNetCore.Identity
@using Fos.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <span class="navbar-text mr-4">@Localizer["Aangemeld als"] @UserManager.GetUserName(User)</span>
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <ul class="navbar-nav">
            <li class="nav-item">
                <button type="submit" class="btn nav-link">@Localizer["Afmelden"]</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">        
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">@Localizer["Aanmelden"]</a></li>
    </ul>
}
