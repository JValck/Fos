@model Fos.Models.ClientViewModels.CreateViewModel

@{
    ViewData["Title"] = "Klant aanmaken";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TableId" class="col-form-label"></label>
            <select asp-for="TableId" asp-items="@(new SelectList(Model.DinnerTables, "Id", "TableNumber"))" class="custom-select"></select>
            <span asp-validation-for="TableId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mb-2"><i class="fas fa-plus"></i> @ViewData["Title"]</button>
        </div>
    </form>
</div>

