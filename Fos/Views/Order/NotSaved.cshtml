
@{
    ViewData["Title"] = Localizer["Bestelling niet opgeslagen"];
}

<div class="w-100 h-100">
    <div class="d-flex justify-content-center align-items-center w-100 h-100">
        <div class="d-block">
            <h1 class="text-center text-warning text-uppercase"><i class="fas fa-times"></i> @ViewData["Title"]</h1>
            <div class="d-flex justify-content-center">
                <a asp-controller="Redirect" asp-action="Index" class="btn btn-outline-primary text-center"><i class="fas fa-home"></i> @Localizer["Naar het startscherm"]</a>
            </div>
        </div>
    </div>
</div>

